# Docker Image Configuration
TRAEFIK_IMAGE=traefik:v3.2
CONTAINER_NAME=traefik

# Network Configuration
NETWORK_NAME=traefik_default

# Port Configuration
HTTP_PORT=80
HTTPS_PORT=443

# ACME / Let's Encrypt Configuration
ACME_EMAIL=your-email@example.com
CERT_RESOLVER_NAME=myresolver
CERT_VOLUME_NAME=traefik_traefik-certs

# Dashboard Configuration
TRAEFIK_DASHBOARD=true
DASHBOARD_HOST=traefik.yourdomain.com

# Optional: Dashboard Basic Authentication
# Generate password hash with: htpasswd -nb admin yourpassword
# Example format: admin:$apr1$xxxxx (escape $ as $$ in docker-compose)
# DASHBOARD_AUTH_USERS=admin:$$apr1$$xxxxx

# Logging
LOG_LEVEL=INFO
